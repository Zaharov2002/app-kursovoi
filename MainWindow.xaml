<Window x:Class="app_kursovoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_kursovoi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Text ="Кинотеатр Кино+" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid Background="Green" Panel.ZIndex="-2"/>
        <Image Source="resources/klipartz.com.png" HorizontalAlignment="Left"/>
        <Frame ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden" Grid.Row="1" Name="MainFrame"></Frame>
        <Button Content="Back" Name="btnBack" HorizontalAlignment="Right" Margin="5" Click="btnBack_Click"></Button>
    </Grid>
</Window>
